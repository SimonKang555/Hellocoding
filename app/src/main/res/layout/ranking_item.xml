<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rankingNumber"
        android:layout_width="107dp"
        android:layout_height="31dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:text="Ranking number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rankingUserName"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/rankingNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rankingTimeTaken"
        android:layout_width="79dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="time taken"
        app:layout_constraintStart_toEndOf="@+id/rankingUserName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>